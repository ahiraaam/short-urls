<main role="main" class="container">
  <div class="row">
    <div class="col-12">
      <h1>TODO List</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <form class="form-inline" action="/" method="POST">
        <div class="input-group w-100">
          <input type="text" name="urlInicial" placeholder="Url" class="form-control" id="urlInicial">
          <div class="input-group-append">
            <buton type="button" value="Add" class="btn btn-primary" onclick="storeUrl()">Add</buton>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      {{#each urls}}
      <div id="{{id}}" class="card my-3 {{#eq status 'done' }}bg-light{{/eq}}">
        <div class="card-body">
          <p class="card-text">URL Original : {{ url }}</p>
          <p>Url corta: <a href="http://localhost:3000/{{hash}}">http://localhost:3000/{{hash}}</a></p>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</main>